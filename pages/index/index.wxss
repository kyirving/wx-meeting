page {
  height: 100vh;
  background-color: #f8f9fb;
}

.container {
  min-height: 100vh;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 60rpx 40rpx;
  box-sizing: border-box;
}

.status-bar {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-top: 40rpx;
}

.status-text {
  font-size: 36rpx;
  color: #333;
  font-weight: 600;
  margin-bottom: 16rpx;
}

.time-text {
  font-size: 48rpx;
  color: #007AFF;
  font-family: monospace;
  font-weight: bold;
}

.input-section {
  width: 100%;
  padding: 0 40rpx;
  margin-top: 40rpx;
  box-sizing: border-box;
}

.meeting-title-input {
  width: 100%;
  height: 88rpx;
  background-color: #fff;
  border-radius: 12rpx;
  padding: 0 30rpx;
  font-size: 30rpx;
  color: #333;
  text-align: center;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.05);
  box-sizing: border-box;
}

.main-action {
  display: flex;
  flex-direction: column;
  align-items: center;
  position: relative;
}

.record-btn-wrapper {
  position: relative;
  width: 240rpx;
  height: 240rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-bottom: 40rpx;
}

.record-btn {
  width: 200rpx;
  height: 200rpx;
  border-radius: 50%;
  background: linear-gradient(135deg, #007AFF, #0056b3);
  display: flex;
  justify-content: center;
  align-items: center;
  box-shadow: 0 10rpx 30rpx rgba(0, 122, 255, 0.3);
  z-index: 2;
  transition: all 0.3s ease;
}

.record-btn-wrapper.recording .record-btn {
  background: #ff3b30;
  box-shadow: 0 10rpx 30rpx rgba(255, 59, 48, 0.3);
  transform: scale(0.9);
}

.mic-icon {
  font-size: 80rpx;
  color: white;
}

.ripple {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  border-radius: 50%;
  background-color: rgba(0, 122, 255, 0.2);
  z-index: 1;
  animation: ripple 1.5s infinite;
}

.record-btn-wrapper.recording .ripple {
  background-color: rgba(255, 59, 48, 0.2);
}

@keyframes ripple {
  0% {
    transform: scale(0.8);
    opacity: 1;
  }
  100% {
    transform: scale(1.5);
    opacity: 0;
  }
}

.tip-text {
  font-size: 28rpx;
  color: #888;
}

.footer-actions {
  display: flex;
  justify-content: space-around;
  width: 100%;
  padding-bottom: 40rpx;
}

.action-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 20rpx;
  background-color: white;
  border-radius: 16rpx;
  width: 200rpx;
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.05);
}

.action-icon {
  font-size: 40rpx;
  margin-bottom: 10rpx;
}

.action-label {
  font-size: 26rpx;
  color: #555;
}
