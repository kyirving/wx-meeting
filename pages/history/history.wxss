page {
  background-color: #f8f9fb;
}

.container {
  padding: 24rpx;
  min-height: 100vh;
  box-sizing: border-box;
}

.history-item {
  background-color: #fff;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 4rpx 16rpx rgba(0,0,0,0.04);
  transition: opacity 0.3s;
}

.history-item:active {
  opacity: 0.8;
}

.item-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
  padding-bottom: 20rpx;
  border-bottom: 1rpx solid #f5f5f5;
}

.item-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  flex: 1;
  margin-right: 20rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.item-status {
  font-size: 22rpx;
  padding: 6rpx 16rpx;
  border-radius: 20rpx;
  font-weight: 500;
}

.item-status.success {
  background-color: #e6f7ff;
  color: #1890ff;
}

.item-status.processing {
  background-color: #fff7e6;
  color: #fa8c16;
}

.item-info {
  display: flex;
  justify-content: space-between;
}

.info-row {
  display: flex;
  align-items: center;
  font-size: 26rpx;
  color: #666;
}

.info-row .icon {
  margin-right: 8rpx;
  font-size: 24rpx;
}

.loading-more {
  padding: 30rpx 0;
  text-align: center;
}

.loading-text, .no-more-text {
  font-size: 24rpx;
  color: #999;
}

.empty-state {
  margin-top: 200rpx;
  text-align: center;
  color: #999;
  font-size: 28rpx;
}

/* 弹窗样式 */
.modal-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
  z-index: 1000;
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 40rpx;
  box-sizing: border-box;
}

.modal-content {
  width: 100%;
  max-height: 80vh;
  background-color: #fff;
  border-radius: 24rpx;
  display: flex;
  flex-direction: column;
  overflow: hidden;
  animation: modalShow 0.3s ease;
}

@keyframes modalShow {
  from {
    opacity: 0;
    transform: scale(0.9);
  }
  to {
    opacity: 1;
    transform: scale(1);
  }
}

.modal-header {
  padding: 30rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-bottom: 1rpx solid #eee;
}

.modal-title {
  font-size: 34rpx;
  font-weight: bold;
  color: #333;
}

.close-btn {
  font-size: 48rpx;
  color: #999;
  line-height: 1;
  padding: 0 10rpx;
}

.modal-body {
  flex: 1;
  padding: 30rpx;
  box-sizing: border-box;
  overflow-y: auto;
}

.markdown-text {
  font-size: 28rpx;
  line-height: 1.6;
  color: #444;
  white-space: pre-wrap;
  font-family: -apple-system, monospace;
}

.modal-footer {
  padding: 20rpx 30rpx;
  border-top: 1rpx solid #eee;
}

.copy-btn {
  background-color: #007AFF;
  color: #fff;
  font-size: 30rpx;
  border-radius: 40rpx;
}
