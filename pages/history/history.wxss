page {
  background-color: #f7f8fa;
  color: #333;
}

.container {
  display: block;
  width: 100%;
  padding: 0;
  min-height: 100vh;
  box-sizing: border-box;
  padding-bottom: 40rpx;
}

.history-list {
  padding: 16rpx;
  width: 100%;
  box-sizing: border-box;
}

.history-card {
  background-color: #fff;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 24rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.04);
  transition: all 0.2s ease;
}

.history-card:active {
  transform: scale(0.98);
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.02);
}

.card-main {
  flex: 1;
  margin-right: 20rpx;
  overflow: hidden;
}

.card-header {
  display: flex;
  align-items: center;
  margin-bottom: 12rpx;
  flex-wrap: wrap;
}

.card-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  margin-right: 16rpx;
  line-height: 1.4;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  max-width: 100%;
}

.card-status {
  font-size: 20rpx;
  padding: 4rpx 10rpx;
  border-radius: 6rpx;
  font-weight: 500;
  line-height: 1;
}

.status-success {
  background-color: rgba(7, 193, 96, 0.1);
  color: #07c160;
}

.status-processing {
  background-color: rgba(250, 157, 59, 0.1);
  color: #fa9d3b;
}

.card-meta {
  display: flex;
  align-items: center;
  font-size: 26rpx;
  color: #999;
}

.meta-item {
  display: flex;
  align-items: center;
}

.meta-text {
  line-height: 1;
}

.separator {
  margin: 0 10rpx;
  font-weight: bold;
}

/* CSS Arrow */
.card-arrow {
  width: 16rpx;
  height: 16rpx;
  border-top: 4rpx solid #e0e0e0;
  border-right: 4rpx solid #e0e0e0;
  transform: rotate(45deg);
  flex-shrink: 0;
}

/* Loading & Empty States */
.loading-more {
  padding: 20rpx 0;
  text-align: center;
}

.loading-text, .no-more-text {
  font-size: 24rpx;
  color: #bbb;
}

.empty-state {
  margin-top: 200rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  color: #999;
  font-size: 28rpx;
}

/* Modal Styles - Polished */
.modal-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.6);
  z-index: 1000;
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 40rpx;
  box-sizing: border-box;
  backdrop-filter: blur(4px);
  transition: opacity 0.3s;
}

.modal-content {
  width: 100%;
  max-height: 80vh;
  background-color: #fff;
  border-radius: 24rpx;
  display: flex;
  flex-direction: column;
  overflow: hidden;
  box-shadow: 0 10rpx 40rpx rgba(0, 0, 0, 0.2);
  transform: translateY(0);
  transition: transform 0.3s;
}

.modal-header {
  padding: 32rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-bottom: 1rpx solid #f0f0f0;
}

.modal-title {
  font-size: 34rpx;
  font-weight: 600;
  color: #333;
}

.close-btn {
  font-size: 48rpx;
  color: #999;
  line-height: 1;
  padding: 0 10rpx;
  font-weight: 300;
}

.modal-body {
  flex: 1;
  padding: 32rpx;
  box-sizing: border-box;
  overflow-y: auto;
  -webkit-overflow-scrolling: touch;
}

.markdown-text {
  font-size: 30rpx;
  line-height: 1.7;
  color: #444;
  white-space: pre-wrap;
  text-align: justify;
}

.modal-footer {
  padding: 24rpx 32rpx;
  border-top: 1rpx solid #f0f0f0;
  background-color: #fff;
  padding-bottom: max(24rpx, env(safe-area-inset-bottom));
}

.copy-btn {
  background: linear-gradient(135deg, #07c160, #06ad56);
  color: #fff;
  font-size: 32rpx;
  border-radius: 44rpx; /* Pill shape */
  font-weight: 600;
  box-shadow: 0 8rpx 20rpx rgba(7, 193, 96, 0.3);
  border: none;
}

.copy-btn:active {
  transform: scale(0.98);
  box-shadow: 0 4rpx 10rpx rgba(7, 193, 96, 0.2);
}
