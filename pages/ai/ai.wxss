page {
  height: 100vh;
  background-color: #f6f6f6;
  display: flex;
  flex-direction: column;
}

.container {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.chat-list {
  flex: 1;
  padding: 20rpx;
  box-sizing: border-box;
}

.chat-item {
  display: flex;
  margin-bottom: 30rpx;
  align-items: flex-start;
}

.chat-item.user {
  flex-direction: row-reverse;
}

.avatar {
  width: 80rpx;
  height: 80rpx;
  background-color: #fff;
  border-radius: 50%;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 40rpx;
  margin: 0 20rpx;
}

.content {
  max-width: 60%;
  padding: 20rpx;
  background-color: #fff;
  border-radius: 10rpx;
  font-size: 28rpx;
  line-height: 1.5;
  color: #333;
}

.chat-item.user .content {
  background-color: #007AFF;
  color: #fff;
}

.input-area {
  padding: 20rpx;
  background-color: #fff;
  display: flex;
  align-items: center;
  border-top: 1rpx solid #eee;
}

.input {
  flex: 1;
  height: 72rpx;
  background-color: #f6f6f6;
  border-radius: 36rpx;
  padding: 0 30rpx;
  margin-right: 20rpx;
  font-size: 28rpx;
}

.send-btn {
  width: 120rpx !important;
  height: 72rpx;
  line-height: 72rpx;
  padding: 0;
  font-size: 28rpx;
  background-color: #007AFF;
  color: #fff;
  border-radius: 36rpx;
}

.send-btn[disabled] {
  background-color: #ccc !important;
  color: #fff !important;
}
